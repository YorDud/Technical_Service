        <!-- Основное содержание                                                                                         Управление -->
        <ContentControl x:Name="Ed_Izmer" Grid.Column="1" Visibility="Hidden">
            <Grid DataContext="{StaticResource test_tableViewSource}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="70" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Text="Классификатор единиц измерения" VerticalAlignment="Center" Margin="10,0,0,0" FontSize="24" FontWeight="Bold" FontFamily="Yu Gothic UI"/>


                <Button Grid.Row="1" Content="Создать" Margin="10,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Center" Width="100" Click="Ed_Izmer_Create_Click"/>
                <TextBox Grid.Row="1" Width="150" Height="30" HorizontalAlignment="Right" VerticalContentAlignment="Center" Margin="0,0,85,0" materialDesign:HintAssist.Hint="Поиск" Style="{StaticResource MaterialDesignFloatingHintTextBox}"></TextBox>


                <!-- Serch Button -->
                <Button Grid.Row="1" HorizontalAlignment="Right" Height="30" Margin="0,0,5,0" Content="Искать"></Button>

                <DataGrid AutoGenerateColumns="False"  IsReadOnly="True"  EnableRowVirtualization="True" ItemsSource="{Binding}" RowDetailsVisibilityMode="VisibleWhenSelected" Margin="10" Grid.Row="2" Height="900">

                </DataGrid>
            </Grid>
        </ContentControl>

        <ContentControl x:Name="Kontragents" Grid.Column="1" Visibility="Hidden">
            <Grid DataContext="{StaticResource test_tableViewSource}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="70" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Text="Контрагенты" VerticalAlignment="Center" Margin="10,0,0,0" FontSize="24" FontWeight="Bold" FontFamily="Yu Gothic UI"/>


                <Button Grid.Row="1" Content="Создать" Margin="10,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Center" Width="100" Click="Kontragents_Create_Click"/>
                <TextBox Grid.Row="1" Width="150" Height="30" HorizontalAlignment="Right" VerticalContentAlignment="Center" Margin="0,0,85,0" materialDesign:HintAssist.Hint="Поиск" Style="{StaticResource MaterialDesignFloatingHintTextBox}"></TextBox>


                <!-- Serch Button -->
                <Button Grid.Row="1" HorizontalAlignment="Right" Height="30" Margin="0,0,5,0" Content="Искать"></Button>

                <DataGrid AutoGenerateColumns="False" IsReadOnly="True"  EnableRowVirtualization="True" ItemsSource="{Binding}" RowDetailsVisibilityMode="VisibleWhenSelected" Margin="10" Grid.Row="2" Height="900">

                </DataGrid>
            </Grid>
        </ContentControl>

        <ContentControl x:Name="Nomekluatura" Grid.Column="1" Visibility="Hidden">
            <Grid DataContext="{StaticResource test_tableViewSource}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="70" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Text="Номенклатура" VerticalAlignment="Center" Margin="10,0,0,0" FontSize="24" FontWeight="Bold" FontFamily="Yu Gothic UI"/>


                <Button Grid.Row="1" Content="Создать" Margin="10,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Center" Width="100" Click="Nomekluatura_Create_Click"/>
                <TextBox Grid.Row="1" Width="150" Height="30" HorizontalAlignment="Right" VerticalContentAlignment="Center" Margin="0,0,85,0" materialDesign:HintAssist.Hint="Поиск" Style="{StaticResource MaterialDesignFloatingHintTextBox}"></TextBox>


                <!-- Serch Button -->
                <Button Grid.Row="1" HorizontalAlignment="Right" Height="30" Margin="0,0,5,0" Content="Искать"></Button>

                <DataGrid AutoGenerateColumns="False"  IsReadOnly="True"  EnableRowVirtualization="True" ItemsSource="{Binding}" RowDetailsVisibilityMode="VisibleWhenSelected" Margin="10" Grid.Row="2" Height="900">

                </DataGrid>
            </Grid>
        </ContentControl>

        <ContentControl x:Name="Users_Nalad" Grid.Column="1" Visibility="Hidden">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="70" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Text="Сотрудники" VerticalAlignment="Center" Margin="10,0,0,0" FontSize="24" FontWeight="Bold" FontFamily="Yu Gothic UI"/>


                <Button Grid.Row="1" Content="Создать" Margin="10,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Center" Width="100" Click="Users_Nalad_Create_Click"/>
                <TextBox Grid.Row="1" x:Name="SearchBoxUsers" Width="150" Height="30" HorizontalAlignment="Right" VerticalContentAlignment="Center" Margin="0,0,65,0" materialDesign:HintAssist.Hint="Поиск" Style="{StaticResource MaterialDesignFloatingHintTextBox}" TextChanged="SearchBoxUsers_TextChanged"></TextBox>


                <!-- Serch Button -->
                <Button x:Name="ClearBtnUsers" Grid.Row="1" HorizontalAlignment="Right" Width="auto" Height="30" FontSize="12" Margin="0,0,10,0" Content="✖" Click="ClearBtnUsers_Click"></Button>




                <DataGrid x:Name="dataGridUsers" IsReadOnly="True"  AutoGenerateColumns="False" Margin="10" Grid.Row="2" Height="900" MouseDoubleClick="dataGridUsers_MouseDoubleClick">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Номер" Width="auto" Binding="{Binding ID}" />
                        <DataGridTextColumn Header="ФИО" Width="auto" Binding="{Binding FIO}" />
                        <DataGridTextColumn Header="Логин" Width="auto" Binding="{Binding Login}" />
                        <DataGridTextColumn Header="Пароль" Width="auto" Binding="{Binding Password}" />
                        <DataGridTextColumn Header="Должность" Width="auto" Binding="{Binding Role}" />
                        <DataGridTextColumn Header="Смена" Width="auto" Binding="{Binding Smena}" />
                        <DataGridTextColumn Header="Телефон" Width="auto" Binding="{Binding Phone}" />

                    </DataGrid.Columns>


                </DataGrid>

            </Grid>
        </ContentControl>



        <ContentControl x:Name="Sklad" Grid.Column="1" Visibility="Hidden">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="70" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Text="Склад" VerticalAlignment="Center" Margin="10,0,0,0" FontSize="24" FontWeight="Bold" FontFamily="Yu Gothic UI"/>


                <Button Grid.Row="1" Content="Создать" Margin="10,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Center" Width="100" Click="Sklad_Create_Click"/>

                <TextBox Grid.Row="1" x:Name="SearchBoxSklad" Width="150" Height="30" HorizontalAlignment="Right" VerticalContentAlignment="Center" Margin="0,0,65,0" materialDesign:HintAssist.Hint="Поиск" Style="{StaticResource MaterialDesignFloatingHintTextBox}" TextChanged="SearchBoxSklad_TextChanged"></TextBox>

                <!-- Serch Button -->
                <Button x:Name="ClearBtnSklad" Grid.Row="1" HorizontalAlignment="Right" Width="auto" Height="30" FontSize="12" Margin="0,0,10,0" Content="✖" Click="ClearBtnSklad_Click"></Button>


                <DataGrid x:Name="dataGridSklad" IsReadOnly="True" AutoGenerateColumns="False" Margin="10" Grid.Row="2" Height="600" MouseDoubleClick="dataGridSklad_MouseDoubleClick" MouseMove="dataGridSklad_MouseMove">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Номер" Width="auto" Binding="{Binding ID}" />
                        <DataGridTextColumn Header="Тип детали" Width="auto" Binding="{Binding Deteil_Types}" />
                        <DataGridTextColumn Header="Модель" Width="auto" Binding="{Binding Model}" />
                        <DataGridTextColumn Header="Производитель" Width="auto" Binding="{Binding Proizvod}" />
                        <DataGridTextColumn Header="Поставщик" Width="auto" Binding="{Binding Postav}" />
                        <DataGridTextColumn Header="Оборудование" Width="auto" Binding="{Binding Devices_ID}" />
                        <DataGridTextColumn Header="Название изображения" Width="auto" Binding="{Binding Name_Image}" />
                        <DataGridTextColumn Header="Изображение" Width="auto" Binding="{Binding Image}" />
                        <DataGridTextColumn Header="Место хранения" Width="auto" Binding="{Binding Location}" />
                        <DataGridTextColumn Header="Количество" Width="auto" Binding="{Binding Kolich}" />


                    </DataGrid.Columns>


                </DataGrid>
                <Image x:Name="SelectedImage" Grid.Row="3" Height="300" />
            </Grid>
        </ContentControl>




        <ContentControl x:Name="Shtrichcodes" Grid.Column="1" Visibility="Hidden">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="70" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Text="Штрихкоды" VerticalAlignment="Center" Margin="10,0,0,0" FontSize="24" FontWeight="Bold" FontFamily="Yu Gothic UI"/>


                <Button Grid.Row="1" Content="Создать" Margin="10,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Center" Width="100" Click="Sklad_Create_Click"/>
                <TextBox Grid.Row="1" Width="150" Height="30" HorizontalAlignment="Right" VerticalContentAlignment="Center" Margin="0,0,85,0" materialDesign:HintAssist.Hint="Поиск" Style="{StaticResource MaterialDesignFloatingHintTextBox}"></TextBox>


                <!-- Serch Button -->
                <Button Grid.Row="1" HorizontalAlignment="Right" Height="30" Margin="0,0,5,0" Content="Искать"></Button>

                <DataGrid AutoGenerateColumns="False" IsReadOnly="True"  EnableRowVirtualization="True" ItemsSource="{Binding}" RowDetailsVisibilityMode="VisibleWhenSelected" Margin="10" Grid.Row="2" Height="900">

                </DataGrid>
            </Grid>
        </ContentControl>


        <ContentControl x:Name="Dop_Rekvizits" Grid.Column="1" Visibility="Hidden">
            <Grid Margin="10,0,0,0">
