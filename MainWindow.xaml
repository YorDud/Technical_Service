                <TextBlock Grid.Row="0" Text="Перечень работ" VerticalAlignment="Center" Margin="10,0,0,0" FontSize="24" FontWeight="Bold" FontFamily="Yu Gothic UI"/>
                <TextBox Grid.Row="1" x:Name="SearchBoxWork_List" Width="150" Height="30" HorizontalAlignment="Right" VerticalContentAlignment="Center" Margin="0,0,65,0" materialDesign:HintAssist.Hint="Поиск" Style="{StaticResource MaterialDesignFloatingHintTextBox}" TextChanged="SearchBoxWork_List_TextChanged"></TextBox>


                <!-- Serch Button -->
                <Button x:Name="ClearBtnWork_List" Grid.Row="1" HorizontalAlignment="Right" Width="auto" Height="30" FontSize="12" Margin="0,0,10,0" Content="✖" Click="ClearBtnWork_List_Click"></Button>






                <Button Grid.Row="1" Content="Создать" Margin="10,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Center" Width="100" Click="Work_List_Createbtn_Click"/>


                <DataGrid x:Name="dataGridWork_List" IsReadOnly="True" AutoGenerateColumns="False" Margin="10" Grid.Row="2" Height="900" MouseDoubleClick="dataGridWork_List_MouseDoubleClick">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Номер" Width="auto" Binding="{Binding ID}" />
                        <DataGridTextColumn Header="Помещение" Width="auto" Binding="{Binding Work_List}" />
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </ContentControl>





















        <ContentControl x:Name="MainHelp" Grid.Column="1" Visibility="Hidden">
            <Button Content="Помощь"></Button>
        </ContentControl>
    </Grid>
</Window>