<Window x:Class="WpfApp4.MiniWindows.Docs_Edit_Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Документация" Height="440" Width="700" materialDesign:ColorZoneAssist.Mode="PrimaryLight"
ResizeMode="NoResize"
WindowStyle="None"
Background="Transparent"
AllowsTransparency="True" WindowStartupLocation="CenterScreen">

        <Border Background="White" Margin="15,15,15,15"
CornerRadius="15" 
               
Padding="10">
            <Border.Effect>
                <DropShadowEffect BlurRadius="15" Color="#FF673AB7" ShadowDepth="0"></DropShadowEffect>
            </Border.Effect>
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>


                <Button x:Name="ExitButton" Content="×"  
        HorizontalAlignment="Right" VerticalAlignment="Top"
        FontSize="30" FontWeight="Bold" 
        Background="Transparent" BorderBrush="Transparent"
        Foreground="Red" Margin="0,-14,-15,0"
        Click="ExitButton_Click" Height="39" Width="50"/>
                
                <StackPanel Grid.Row="0">
                    <TextBlock Grid.Row="0" Text="Изменить документ" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10" FontSize="24" FontWeight="Bold" FontFamily="Yu Gothic UI"/>
                </StackPanel>



                <Grid Grid.Row="1" Margin="0,10,0,126">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>



                    <Border x:Name="FileDropBorder" Grid.Row="0" Grid.ColumnSpan="2" BorderBrush="Gray" BorderThickness="2" Margin="5" Height="100" Width="auto" Drop="FileDropBorder_Drop" DragOver="FileDropBorder_DragOver">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <TextBlock FontSize="20" FontWeight="Bold" FontFamily="Yu Gothic UI" Foreground="#FF8A8A8A" TextAlignment="Center">Перетащите файл сюда</TextBlock>
                            <TextBlock FontSize="14" FontFamily="Yu Gothic UI" Foreground="#FF4A90E2" TextAlignment="Center" Margin="5">
            <Hyperlink Click="ChooseFileHyperlink_Click">или выберите файл</Hyperlink>
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <!--<Button Grid.Row="1" Grid.ColumnSpan="2" Content="Выбрать файл" Margin="5" Click="ChooseFileButton_Click" Background="#FFE0E0E0" Foreground="#DD000000" />-->

                    <TextBox x:Name="FileNameTextBox" Grid.Row="2" VerticalAlignment="Center" Margin="5,0,62,0"  Height="30" Padding="3" Style="{StaticResource MaterialDesignOutlinedTextBox}" Grid.ColumnSpan="2"/>
                    <Button Grid.Row="2" Content="📥" Margin="463,5,5,5" Click="SaveFileButton_Click" Grid.Column="1" />

                    <Label Content="Описание:" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Margin="5" FontSize="15" FontWeight="Bold" FontFamily="Yu Gothic UI"/>
                    <TextBox x:Name="Opisaniye" Grid.Row="3" Margin="5"  Height="30" Padding="3" Style="{StaticResource MaterialDesignOutlinedTextBox}" Grid.Column="1"/>





                    <Button Grid.Row="7" Content="Изменить" Margin="5" Grid.ColumnSpan="2" Click="Docs_Update_Click" />
                    <Button Grid.Row="8" Content="Удалить документ" Margin="5" Grid.ColumnSpan="2" Click="Docs_Delete_Click" Background="#FFDC2C2C" />

                </Grid>
            </Grid>



            <!--<StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Left" Width="639" Margin="0,191,0,67">
            <Button Content="Печать присвоенного штрихкода" Margin="0,0,5,0" />
            <Button Content="Изменить штрихкод" Margin="0,0,5,0"/>
            <Button Content="Печать штрихкода старый" Margin="0,0,5,0"/>
        </StackPanel>-->


        </Border>



</Window>
